include "Tlbx CFDate.incl"/*These were kludges for the old FB Compiler.app.They are deprecated as of FB 5.3 and may be withdrawn in the future.Instead you should use:valid = fn CFGregorianDateIsValid( gregDate, flags )absTime = fn CFGregorianDateGetAbsoluteTime( gregDate, timeZone )absTime = fn CFAbsoluteTimeAddGregorianUnits( absTime, timeZone, gregUnits )rp 20090710*/'~glue functions to simplify the calls...local fn CFGregorianDateIsValid_Glue( d as ^CFGregorianDate, unitFlags as CFOptionFlags )'~'1dim as Boolean   validbeginCCodevalid = CFGregorianDateIsValid( *d, unitFlags );endCend fn = validlocal fn CFGregorianDateGetAbsoluteTime_Glue#( d as ^CFGregorianDate, tz as CFTimeZoneRef )'~'1dim as CFAbsoluteTime   dateValbeginCCodedateVal = CFGregorianDateGetAbsoluteTime( *d, tz );endCend fn = dateVallocal fn CFAbsoluteTimeAddGregorianUnits_Glue#( at as CFAbsoluteTime, tz as CFTimeZoneRef, u as ^CFGregorianUnits )'~'1dim as CFAbsoluteTime   dateValbeginCCodedateVal = CFAbsoluteTimeAddGregorianUnits( at, tz, *u );endCend fn = dateVal